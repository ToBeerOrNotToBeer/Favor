@{
    ViewBag.Title = "Contact";
}

<div class="col-md-8 col-md-offset-2">
    <div class="card">

        <br />
        <br />
        <br />

        <h1 class="text-center">Ticket</h1>

        <br />

        <div class="col-md-6 col-md-push-3 input text-center">

            <div class="input-group col-md-6 col-md-push-3 input text-center">
                <div class="form-group">
                    <input class="form-control text-center" name="Title" placeholder="Enter title here" type="text">
                </div>
            </div>

            <div class="input-group">
                <span class="input-group-addon">
                    <textarea class="form-control text-center" name="Description" rows="6" cols="50" placeholder="Enter your message here"></textarea>
                </span>
            </div>

            <div class="form-group">
                <div style="margin-left: 92px">
                    <input type="submit" value="Send Message" class="btn btn-primary btn-round pull-left" />
                </div>
            </div>

        </div>
    </div>
</div>


<div class="text-center col-md-12"><a class="btn btn-white btn-round" href="/Home/Index"><i class="fa fa-chevron-left"></i></a></div>
